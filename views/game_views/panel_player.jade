extends ../layout

block content
    script(type="text/javascript" src="/js/main.js")
    #user(hidden)=userJSON
    #char(hidden)=charJSON
    #game(hidden)=gameJSON
    include panel/panel_data
    include panel/panel_sheet
    include panel/panel_action
    #wrapper-player
        .container
            #panel.panel.panel-primary.overlay(hidden)
                .panel-heading.text-center=user.name + ' - ' + game.name
                .panel-body.overlay-content
                    #char-data.panel.panel-primary
                        .panel-heading="Datos del personaje"
                            span#char-data-button.glyphicon.glyphicon-minus.right-align.closer
                        .panel-body
                            .table-responsive
                                table#show-data.table
                                    tbody
                            .container.col-sm-6.bg-white
                                b="Historia"
                                p#story
                    #char-stats.panel.panel-primary
                        .panel-heading="Ficha del personaje"
                            span#char-stats-button.glyphicon.glyphicon-minus.right-align.closer
                            span#download.text-center.glyphicon.glyphicon-download-alt.formatted-span-button
                            span#char-xp.left-align
                        .panel-body
                            .table-responsive
                                table#show-stats.table
                                    tbody
                include panel/panel_output